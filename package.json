{
  "name": "ecom-application",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.12.3",
  "engines": {
    "node": ">=20"
  },
  "volta": {
    "node": "20.17.0",
    "pnpm": "9.12.3"
  },
  "scripts": {
    "setup": "node scripts/run-script.mjs setup",
    "install:all": "pnpm install --recursive",
    "migrate": "tsx scripts/migrate.ts",
    "db:up": "docker compose up -d db mongo",
    "db:wait": "node scripts/run-script.mjs db-wait",
    "db:migrate": "pnpm --filter @apps/api prisma:migrate",
    "db:seed": "pnpm --filter @apps/api prisma:seed",
    "first-run": "node scripts/run-script.mjs migrate-and-seed",
    "dev": "concurrently \"pnpm --filter @apps/api dev\" \"pnpm --filter @apps/web dev\" \"pnpm --filter @apps/recs dev\"",
    "dev:stop": "npx kill-port 3000 4000 5000 || echo 'kill-port failed; on Windows run: netstat -ano | Select-String \":4000\" and Stop-Process -Id <pid>'",
    "stop": "pnpm run dev:stop",
    "dev:recs": "node scripts/run-recs-dev.mjs",
    "build": "pnpm -r --if-present build",
    "lint": "pnpm -r --if-present lint",
    "postinstall": "pnpm -r --if-present prisma:generate || true",
  "test:web": "pnpm --filter @apps/web test --"
  },
  "devDependencies": {
    "concurrently": "^8.2.1",
    "dotenv": "^16.4.5",
    "tsx": "^4.20.6"
  }
}
