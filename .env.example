# -------------------------------------------------------
# Core database configuration (used by Docker + Prisma)
# -------------------------------------------------------
DB_HOST=localhost
DB_PORT=5432
DB_USER=ecom
DB_PASSWORD=ecom
DB_NAME=ecom

# Full connection strings consumed by application services
DATABASE_URL=postgresql://ecom:ecom@localhost:5432/ecom?schema=public
MONGO_URL=mongodb://localhost:27017/shop

# Ports the local services listen on
API_PORT=4000
WEB_PORT=3000

# Public URLs used by the Next.js app
NEXT_PUBLIC_API_BASE=http://localhost:4000/api

# Optional services
RECS_URL=http://localhost:5000

# Automation toggles
#AUTO_RESET_DB_ON_P1000=1

# Windows users: enable long paths once per machine
# git config --system core.longpaths true
